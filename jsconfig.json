{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "dist"]
}
